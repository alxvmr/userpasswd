INSTALL = install

datadir = /usr/share

.PHONY:	all install clean

all clean: 

install:
	for f in *.png *.svg; do \
		if [[ "$$f" == *.svg ]]; then \
			$(INSTALL) -pD -m644 "$$f" \
			    "$(RPM_BUILD_ROOT)$(datadir)/pixmaps/$$f"; \
		else \
			$(INSTALL) -pD -m644 "$$f" \
			"$(RPM_BUILD_ROOT)$(datadir)/pixmaps/userpasswd-$$f"; \
		fi; \
	done
