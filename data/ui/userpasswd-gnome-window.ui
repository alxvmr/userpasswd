<?xml version='1.0' encoding='UTF-8'?>
<!-- Created with Cambalache 0.94.1 -->
<interface domain="userpasswd">
  <!-- interface-name userpasswd.ui -->
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.4"/>
  <template class="UserpasswdWindow" parent="AdwApplicationWindow">
    <property name="content">toolbar</property>
    <child>
      <object class="AdwToolbarView" id="toolbar">
        <property name="content">
          <object class="AdwClamp">
            <property name="child">container</property>
            <child>
              <object class="GtkBox" id="container">
                <property name="margin-end">15</property>
                <property name="margin-start">15</property>
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkBox" id="container_data_input">
                    <property name="orientation">vertical</property>
                    <child>
                      <object class="GtkListBox" id="container_password">
                        <property name="css-classes">boxed-list</property>
                        <property name="margin-bottom">10</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="password_not_match_label">
                        <property name="visible">False</property>
                        <property name="css-classes">error</property>
                        <property name="label" translatable="yes">Passwords don't match</property>
                        <property name="margin-bottom">5</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLevelBar" id="strength_indicator">
                        <property name="visible">False</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="strength_indicator_label">
                        <property name="halign">start</property>
                        <property name="label" translatable="yes">Mix uppercase and lowercase and try to use a number or two</property>
                        <property name="margin-bottom">10</property>
                        <property name="margin-top">5</property>
                        <property name="sensitive">False</property>
                        <property name="visible">False</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkBox" id="status_container">
                    <property name="margin-top">15</property>
                    <property name="orientation">vertical</property>
                    <child>
                      <object class="GtkSpinner" id="spinner">
                        <property name="visible">False</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="status_mess">
                        <property name="visible">False</property>
                        <attributes>
                          <attribute name="weight" value="bold"/>
                        </attributes>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="substatus_mess">
                        <property name="visible">False</property>
                      </object>
                    </child>
                  </object>
                </child>
                <child>
                  <object class="GtkExpander">
                    <property name="can-focus">False</property>
                    <property name="child">
                      <object class="GtkScrolledWindow">
                        <property name="child">info</property>
                        <property name="vexpand">True</property>
                        <child>
                          <object class="GtkLabel" id="info">
                            <property name="selectable">True</property>
                            <property name="wrap">True</property>
                            <property name="xalign">0.0</property>
                            <property name="yalign">0.0</property>
                          </object>
                        </child>
                      </object>
                    </property>
                    <property name="label" translatable="yes">Info</property>
                    <property name="margin-top">10</property>
                    <property name="vexpand">True</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
        <property name="margin-bottom">10</property>
        <child type="top">
          <object class="AdwHeaderBar" id="header-bar">
            <property name="can-focus">False</property>
            <property name="title-widget">
              <object class="AdwWindowTitle">
                <property name="subtitle" translatable="yes">Change password</property>
                <property name="title">userpasswd</property>
              </object>
            </property>
            <child>
              <object class="GtkMenuButton" id="menu_button">
                <property name="has-frame">False</property>
                <property name="icon-name">open-menu-symbolic</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
